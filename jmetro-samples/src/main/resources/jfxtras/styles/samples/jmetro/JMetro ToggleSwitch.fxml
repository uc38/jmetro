<?import org.controlsfx.control.ToggleSwitch?>
<AnchorPane id="AnchorPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="444.0" styleClass="background" stylesheets="@JMetroToggleSwitch.css">
    <Label layoutX="44.0" layoutY="34.0" styleClass="header" text="Toggle Switch" />

    <Label layoutX="70.0" layoutY="145.0" styleClass="item-title" text="Normal unselected" />
    <ToggleSwitch layoutX="70.0" layoutY="168.0" text="Off" />

    <Label layoutX="271.0" layoutY="145.0" styleClass="item-title" text="Disabled" />
    <ToggleSwitch disable="true" layoutX="271.0" layoutY="168.0"  text="Off"/>

    <Label layoutX="70.0" layoutY="227.0" styleClass="item-title" text="Normal selected" />
    <ToggleSwitch layoutX="70.0" layoutY="250.0" text="On"/>

    <Label layoutX="70.0" layoutY="309" styleClass="item-title" text="Toggle display 'right'" />
    <ToggleSwitch styleClass="toggle-display-right" layoutX="70.0" layoutY="332" text="On"/>

    <Label layoutX="70.0" layoutY="391" styleClass="item-title" text="Toggle display 'thumb_only'" />
    <ToggleSwitch styleClass="toggle-display-thumb" layoutX="70.0" layoutY="414" text="On"/>
</AnchorPane>
